<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:title="@string/game">
        <EditTextPreference
            android:defaultValue="Player1"
            android:key="edit_text_preference_player_name"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/player_name" />
        <ListPreference
            android:defaultValue="blue"
            android:entries="@array/card_back_entries"
            android:entryValues="@array/card_back_entryValue"
            android:inputType="number"
            android:key="list_preference_card_back_color"
            android:title="@string/card_back_color" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="switch_preference_dark_mode"
            android:title="@string/dark_mode" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="switch_preference_game_landscape"
            android:title="@string/game_landscape" />
    </PreferenceCategory>
</PreferenceScreen>